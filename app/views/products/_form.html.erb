<%= form_for @product do |form| %>
    <% if @product.errors.any? %>
    <h2>EL FORMULARIO POSEE <%= @product.errors.count %> ERROR(ES)</h2>
      <div class="mb-4">
        <% @product.errors.full_messages.each do |msj_error| %>
          <li><%= msj_error %></li>
        <% end %>
      </div>
    <% end %>

  <div class="mb-4">
    <%= form.text_field :name, placeholder:'Nombre del producto', class:"appearance-none block w-full py-3 px-4  text-gray-700 bg-gry-50 focus:bg-white border border-gray-200 focus:border-gray-500 rounded focus:outline-none" %>
  </div>
  <div class="mb-4">
    <%= form.text_area :description, placeholder:"Descripcion", rows:5, class:"appearance-none block w-full py-3 px-4  text-gray-700 bg-gry-50 focus:bg-white border border-gray-200 focus:border-gray-500 rounded focus:outline-none" %>
  </div>

  <div class="mb-4">
    <%= form.label "visible" %>
    <%= form.check_box :visible %>
  </div>

  <div class="mb-4">
    <%= form.file_field :image  %>
  </div>

  <div class="mt-4 mb-4">
    <h2 class="mb-6 text-2xl font-semibold font-heading">Categorias</h2>
    <%= form.collection_check_boxes :category_ids, Category.all, :id, :name do  |category| %>
      <%= category.label class:"form-check-label text-lg inline-block text-gray-600" do %>
        <%= category.check_box + category.text%>
      <% end %>
    <% end %>
  </div>

  <div class="mb-4">
    <%= form.submit 'Guardar cambios', class:"cursor-pointer inline-block  py-4 px-8 leading-none text-white bg-red-600 hover:bg-red-700 font-semibold rounded shadow" %>
  </div>
<% end %>