<%= form_with model:@product do |form| %>
    <% if @product.errors.any? %>
      <div>
        <% @product.errors.each do |msj_error| %>
          <li><%= msj_error.full_messages %></li>
        <% end %>
      </div>
    <% end %>

  <div class="mb-4">
    <%= form.text_field :name, class:"appearance-none block w-full py-3 px-4  text-gray-700 bg-gry-50 focus:bg-white border border-gray-200 focus:border-gray-500 rounded focus:outline-none", placeholder:'Nombre del producto' %>
  </div>
  <div class="mb-4">
    <%= form.text_area :description, rows:5, class:"appearance-none block w-full py-3 px-4  text-gray-700 bg-gry-50 focus:bg-white border border-gray-200 focus:border-gray-500 rounded focus:outline-none", placeholder:"Description" %>
  </div>

  <div class="mb-4">
    <%= form.label "visible" %>
    <%= form.check_box :visible %>
  </div>

  <div class="mb-4">
